generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GameSession {
  lobbyId   String   @id
  state     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model QuestionPair {
  id          String   @id
  ownerId     String
  promptAText String
  promptATarget String
  promptBText String
  promptBTarget String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([ownerId])
}
