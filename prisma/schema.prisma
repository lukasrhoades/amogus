generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id
  username     String        @unique
  passwordHash String
  sessions     AuthSession[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model AuthSession {
  token     String   @id
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}

model GameSession {
  lobbyId   String   @id
  state     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model QuestionPair {
  id          String   @id
  ownerId     String
  promptAText String
  promptATarget String
  promptBText String
  promptBTarget String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([ownerId])
}

model SettingsPreset {
  ownerId   String
  name      String
  config    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([ownerId, name])
  @@index([ownerId])
}
